<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="523dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:background="@drawable/border_top_bottom"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/imageFoto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtTittle"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txtTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Title"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageLike"
                android:layout_alignStart="@+id/imageLike"
                android:layout_below="@+id/imageFoto"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageLike"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                app:srcCompat="@drawable/love_off"
                android:layout_marginBottom="29dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textJumlahLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:text="100"
                android:textSize="36sp"
                android:layout_alignTop="@+id/imageLike"
                android:layout_toRightOf="@+id/imageLike"
                android:layout_toEndOf="@+id/imageLike" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>